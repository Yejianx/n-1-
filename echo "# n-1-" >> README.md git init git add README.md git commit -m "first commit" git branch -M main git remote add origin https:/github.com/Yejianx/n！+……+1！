#define _CRT_SECURE_NO_WARNINGS 1

#include <stdio.h>

#define uint unsigned int


int main()
{	
	int i=0, j = 0;
	int num = 0,sum = 0;
  
  printf("input a number\n");

	scanf("%d",&num);
	
	if (num == 0)
	{
		printf("1");
	}
	else
	{

		for (; num > 0; num--) //输入4 内部for语句就会算出4！ num再减一 算出3！累加直到算出来。n！+……+1！
		{
			for (i = 1,j = num; j > 1; j--)//算出阶乘的值
			{
				i = i * j;//上次的i，乘与这次的j 逐步累
			}
		
			sum = sum+ i;//每次阶乘的累加
		}
		printf("\n%d", sum);
	}
	
	

return 0;
}
