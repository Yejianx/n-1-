#define _CRT_SECURE_NO_WARNINGS 1

#include <stdio.h>

#define uint unsigned int


int main()
{
	int i = 0, j = 0;
	int num = 1, sum = 0;//it is not to consider number overflow.

	scanf("%d", &j);
    
	if (j == 0)
	{
		printf("1");
	}
	else
	{
		for (i = 1; i <= j; i++)
		{
			num = num * i;

			sum = sum + num;
		}

		printf("%d", sum);
	}

	return 0;
}
